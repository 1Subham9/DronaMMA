<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:backgroundTint="@color/under_line"
        android:layout_margin="10dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/attendanceName"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/archivo_bold"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:padding="2dp"
                    android:text="Student Name"/>

                <CheckBox
                    android:id="@+id/checkbox_attendance"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:fontFamily="@font/archivo_bold"
                    android:text="Present"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/attendanceBatch"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:text="Student Batch"/>

                <TextView
                    android:id="@+id/attendanceClass"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:text="Student Class"/>

                <TextView
                    android:id="@+id/attendanceCheckDetails"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:textColor="@color/red"
                    android:layout_height="match_parent"
                    android:text="Check Details..>>"/>


            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>



</androidx.constraintlayout.widget.ConstraintLayout>